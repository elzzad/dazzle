{
  "private": true,
  "homepage": "https://github.com/elzzad/dazzle#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elzzad/dazzle.git"
  },
  "bugs": {
    "url": "https://github.com/elzzad/dazzle/issues"
  },
  "devDependencies": {
    "@swc-node/register": "^1.5.1",
    "@swc/cli": "^0.1.57",
    "jest": "^29.0.1",
    "prettier": "^2.7.1",
    "turbo": "^1.4.6",
    "typescript": "4.8.3"
  },
  "scripts": {
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test:e2e",
    "test:packages": "turbo run test --stream --scope dazzle-* --ignore dazzle-examples-* -- --passWithNoTests --verbose --no-cache",
    "test:e2e": "jest --config ./test/jest.e2e.config.json --verbose --no-cache",
    "test:examples": "jest --config ./test/jest.examples.config.js --verbose --no-cache",
    "test:examples:simple": "jest --config ./test/jest.examples.config.js --verbose --no-cache -t simple",
    "test:examples:complex": "cross-env COMPLEX=true jest --config ./test/jest.examples.config.js --verbose --no-cache -t complex",
    "clean": "",
    "format": "prettier --write 'packages/*/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|mdx)' 'packages/*/!(node_modules)/**/*.js'",
    "git-reset": "git reset --hard HEAD",
    "git-clean": "git clean -d -x -e node_modules -e packages -f"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|mdx}": [
      "yarn format"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/coverage/",
      "<rootDir>/node_modules/",
      "<rootDir>/examples/"
    ],
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/packages/*/node_modules/",
      "<rootDir>/examples/",
      "<rootDir>/coverage/"
    ]
  },
  "version": "0.1-alpha.1",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "webpack"
      ],
      "allowedVersions": {
        "jest": "^28.1.0"
      }
    }
  },
  "dependencies": {
    "@swc/core": "^1.3.2",
    "@types/node": "^18.7.18",
    "vitest": "^0.23.4"
  }
}