{
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dts",
    "rootDir": "src",
    "baseUrl": "./",
    "typeRoots": [
      "src/typings",
      "node_modules/@types"
    ],
    "paths": {
      "*": [
        "src/type-shims/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "extends": "../tsconfig/base.json"
}
