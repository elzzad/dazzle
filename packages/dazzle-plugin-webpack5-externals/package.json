{
  "name": "@elzzad/dazzle-plugin-webpack5-externals",
  "description": "Dazzle (formerly Razzle) is a plugin based configuration utility to create server-rendered universal JavaScript applications with no configuration",
  "license": "MIT",
  "author": "Ã˜yvind Saltvik",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elzzad/dazzle.git",
    "directory": "packages/dazzle-plugin-webpack5-externals"
  },
  "version": "5.0.0-alpha.0",
  "main": "./lib/index.cjs",
  "types": "./dts/index.d.ts",
  "module": "./esm/index.js",
  "exports": {
    "types": "./dts/index.d.ts",
    "import": "./esm/index.js",
    "require": "./lib/index.cjs"
  },
  "type": "module",
  "scripts": {
    "type": "tsc --project tsconfig.type.json",
    "rename": "renamer --find js --replace cjs \"lib/**\"",
    "build": "run-s build:clean build:cjs build:esm build:dts rename esm:extensions",
    "build:clean": "git clean -dfX esm lib",
    "build:cjs": "swc src -d lib --config-file ../../.swcrc -C module.type=commonjs",
    "build:esm": "swc src -d esm --config-file ../../.swcrc -C module.type=es6",
    "build:dts": "tsc",
    "esm:extensions": "TS_NODE_PROJECT=../../tsconfig.json node -r @swc-node/register ../../.config/esm-transformer.ts",
    "test": "pnpm vitest --run"
  },
  "keywords": [
    "inferno",
    "isomorphic",
    "preact",
    "razzle",
    "react",
    "reason",
    "reasonml",
    "ssr",
    "universal",
    "webpack"
  ],
  "devDependencies": {
    "@elzzad/dazzle": "workspace:*",
    "@elzzad/dazzle-plugin-webpack5": "workspace:*",
    "@types/yargs": "^17.0.7",
    "webpack": "^5.64.4"
    
  },
  "peerDependencies": {
    "@elzzad/dazzle-plugin-webpack5": "0.1.0-alpha.1",
    "@elzzad/dazzle": "0.1.0-alpha.1"
  }
}
