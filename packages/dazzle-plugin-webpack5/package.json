{
  "name": "@elzzad/dazzle-plugin-webpack5",
  "version": "0.1.0-alpha.1",
  "description": "Dazzle (formerly Razzle) is a plugin based configuration utility to create server-rendered universal JavaScript applications with no configuration",
  "type": "module",
  "module": "./esm/index.js",
  "exports": {
    ".": {
      "types": "./dts/index.d.ts",
      "import": "./esm/index.js",
      "require": "./lib/index.cjs"
    },
    "./types": {
      "types": "./dts/types.d.ts",
      "import": "./esm/types.js",
      "require": "./lib/types.cjs"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "dts/*"
      ]
    }
  },
  "scripts": {
    "type": "tsc --project tsconfig.type.json",
    "rename": "renamer --find js --replace cjs \"lib/**\"",
    "build": "run-s build:clean build:cjs build:esm build:dts rename esm:extensions",
    "build:clean": "git clean -dfX esm lib",
    "build:cjs": "swc src -d lib --config-file ../../.swcrc -C module.type=commonjs",
    "build:esm": "swc src -d esm --config-file ../../.swcrc -C module.type=es6",
    "build:dts": "tsc",
    "esm:extensions": "cross-env TS_NODE_PROJECT=../../tsconfig.json node -r @swc-node/register ../../.config/esm-transformer.ts",
    "test": "pnpm jest --passWithNoTests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elzzad/dazzle.git",
    "directory": "packages/dazlle-plugin-webpack5"
  },
  "author": "Ã˜yvind Saltvik",
  "license": "MIT",
  "keywords": [
    "inferno",
    "isomorphic",
    "preact",
    "dazzle",
    "react",
    "reason",
    "reasonml",
    "ssr",
    "universal",
    "webpack"
  ],
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@elzzad/dazzle": "0.1.0-alpha.1"
  },
  "devDependencies": {
    "@elzzad/dazzle": "workspace:*",
    "@types/yargs": "^17.0.7"
  },
  "dependencies": {
    "copy-webpack-plugin": "^11.0.0",
    "deepmerge": "^4.2.2",
    "esm-resolve": "^1.0.5",
    "postcss-load-config": "^4.0.1",
    "webpack": "^5.64.4",
    "webpack-dev-server": "^4.6.0",
    "webpackbar": "^5.0.2"
  }
}
