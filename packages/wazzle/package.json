{
  "name": "@wazzle/wazzle",
  "version": "0.1.0-alpha.1",
  "description": "Wazzle (formerly wazzle) is a plugin based configuration utility to create server-rendered universal JavaScript applications with no configuration",
  "type": "module",
  "module": "./esm/index.js",
  "exports": {
    ".": {
      "types": "./dts/index.d.ts",
      "import": "./esm/index.js",
      "require": "./lib/index.cjs"
    },
    "./types": {
      "types": "./dts/types.d.ts",
      "import": "./esm/types.js",
      "require": "./lib/types.cjs"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "dts/*"
      ]
    }
  },
  "bin": {
    "wazzle": "./bin/wazzle.js"
  },
  "scripts": {
    "rename": "renamer --find js --replace cjs \"lib/**\"",
    "build": "run-s build:clean build:cjs build:esm build:dts rename esm:extensions",
    "build:clean": "git clean -dfX esm lib",
    "build:cjs": "swc src -d lib --config-file ../../.swcrc -C module.type=commonjs,module.ignoreDynamic=true",
    "build:esm": "swc src -d esm --config-file ../../.swcrc -C module.type=es6",
    "build:dts": "tsc --project tsconfig.json",
    "esm:extensions": "cross-env TS_NODE_PROJECT=../../tsconfig.json node -r @swc-node/register ../../.config/esm-transformer.ts",
    "test": "pnpm jest --passWithNoTests --config=../../jest.config.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elzzad/wazzle.git"
  },
  "author": "Ã˜yvind Saltvik",
  "license": "MIT",
  "keywords": [
    "inferno",
    "isomorphic",
    "preact",
    "wazzle",
    "react",
    "reason",
    "reasonml",
    "ssr",
    "universal",
    "webpack"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "cosmiconfig": "^7.0.1",
    "dotenv": "^10.0.0",
    "dotenv-expand": "^5.1.0",
    "enhanced-resolve": "^5.8.3",
    "esm-resolve": "^1.0.5",
    "fs-extra": "^10.0.0",
    "interpret": "^2.2.0",
    "rechoir": "^0.7.0",
    "resolve": "^1.20.0",
    "yargs": "^17.2.1"
  },
  "devDependencies": {
    "@types/interpret": "^1.1.1",
    "@types/yargs": "^17.0.7",
    "@types/fs-extra": "^9.0.13",
    "@types/rechoir": "^0.6.1"
  }
}
